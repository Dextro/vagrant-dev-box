server {
  listen   80;
  server_name  _ <%= node['hostname'] %>;

  access_log  <%= node['nginx']['log_dir'] %>/localhost.access.log;

  root   /vagrant/www;
  index  index.html index.php;

    # pass the PHP scripts to FastCGI server
    location ~ \.php$ {
        fastcgi_pass   127.0.0.1:9000;
        include fastcgi_params;
    }  
}
